---
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";    
import "../styles/global.css";
import TechStack from "../components/TechStack/TechStack.astro";



const  { title ="default" } = Astro.props;
 

		
---

<html lang="en">
    <MainHead {title} />
    <body>
        <section class="main">
            <img src="/images/profile.jpg" class="profile-image">
            <div class="content">
                <h1>Junior Web Developer</h1>
                <p>New in Web Development, I'm motivated to start a professional journey to learn,<br>
                     create, and contribute with my skills. </p>
            </div>
             <TechStack/>
        </section>
       
        <Footer/>
    </body>
</html>

<style>
body {
    background-color: #f8f8f8;
    font-family: 'Roboto', sans-serif;
}

.main {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    height: 100vh;
    padding: 20px;
}

.profile-image {
    width: 250px;
    height: 330px;
    border-radius: 40%;
    object-fit: cover;
    margin-bottom: 20px;
    box-shadow: #333 0px 0px 10px;
}

.content {
    text-align: left;
}

.content h1 {
    font-size: 2.5rem;
    color: #333;
    font-weight: 500;
    margin-bottom: 10px;
}

.content p {
    font-size: 1.2rem;
    color: #666;
}
</style>