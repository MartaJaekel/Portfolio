---
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";    
import "../styles/global.css";
import TechStack from "../components/TechStack/TechStack.astro";
import Projects from "../components/Projects/Projects.astro";


const  { title ="default" } = Astro.props;
 

		
---

<html lang="en">
    <MainHead {title} />
    <body>
        <section class="main">
            <img src="/images/profile.jpg" class="profile-image" alt="profile">
            <div class="content">
                <h1>Junior Web Developer</h1>
                <p>New in Web Development, I'm motivated to start a professional journey to learn,<br>
                     create, and contribute with my skills. </p>
            </div>
             <TechStack/>
            
        </section>
         <Projects/>
       
        <Footer/>
    </body>
</html>

<style>
body {
    display: flex;
    flex-direction: column;
    background-color: #f8f8f8;
    font-family: 'Roboto', sans-serif;
     min-height: 100vh;
}

.main {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    height: 100%;
    padding: 20px;
    margin-left: 100px;

}
@media (max-width: 600px) {
        .main {
            margin-left: 0px;
            height: 100%;

            
        }}
        @media (max-width: 768px) {
        .main {
            margin-left: 0px;
            

            
        }}
        @media (max-width: 1024px) {
        .main {
            margin-left: 0px;
            

            
        }}
        



.profile-image {
    width: 200px;
    height: 270px;
    border-radius: 40%;
    object-fit: cover;
    margin-bottom: 20px;
    box-shadow: #8a8888 0px 0px 10px;
}

.content {
    text-align: left;
}

.content h1 {
    font-size: 2.5rem;
    color: #333;
    font-weight: 500;
    margin-bottom: 10px;
}

.content p {
    font-size: 1.2rem;
    color: #666;
}
</style>