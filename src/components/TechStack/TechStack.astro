---
const techStack = {
    technologies: [
        "JavaScript", "CSS", "HTML", "React", "Typescript", "Node.js", "Next.js", "MongoDB",
    ]
}
---

    <div>
        <h1>Tech Stack</h1>
        <ul class="list">
            {techStack.technologies.map((tech) => (
                <li >{tech}</li>
            ))}
        </ul>
    </div>
    <style>


        h1 {
            color: #333;
            font-size: 1.5rem;
            margin-bottom: 1rem;
            margin-top: 50px;
        }

        ul {
            list-style-type: none;
            padding: 0;
            display: flex;
            flex-direction: row;
            gap: 2rem;
        }
        @media (max-width: 600px) {
        .list{
            display: flex;
            flex-wrap: wrap;
            overflow: auto;
        }
            
        }
        @media (max-width: 768px) {
        .list{
            display: flex;
            flex-wrap: wrap;
            overflow: auto;
        }
            
        }


        li {
            background-color: #f3eeee;
            padding: 0.5rem;
            margin: 0.5rem 0;
            border-radius: 5px;
            box-shadow: 0 0 3px rgba(171, 132, 132, 0.6);
            
            
            &:hover {
                background-color: #e1cbcb;
            }
            
        }
    </style>

